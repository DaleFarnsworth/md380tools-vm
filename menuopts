#!/bin/bash 
count=$(wc --lines ~/user.bin | cut -d" " -f1)
clear
echo -e "                ${WHITE}KD4Z - md380tools-vm (v3.05)${NC}\t  ${RED}(UserCSV records: ${count})${NC}"
echo -e ""
echo -e " Before running ${YELLOW}flash${NC} or ${YELLOW}flashgps${NC}, the radio must be in ${RED}DFU${NC} mode."
echo -e " ${RED}Power on holding PTT and top button${NC}.  Verify in the 'Devices/USB' menu,"
echo -e " verify that 'AnyRoad Technology Digital Radio' is selected."
echo -e ""
echo -e " Before running ${YELLOW}flashdb${NC} the radio should be in normal power ${RED}ON${NC} mode."
echo -e " In the 'Devices\USB' menu, the radio will be called '@0000:ffff Patched MD380'"
echo -e ""
echo -e " You may have to reselect the USB device between each flash menu command below."
echo -e ""
echo -e "  ${YELLOW}glv${NC}       -- (${YELLOW}G${NC}et ${YELLOW}L${NC}atest ${YELLOW}V${NC}ersion) Downloads and builds everything"
echo -e ""
echo -e " After glv, all commands below can be run when the internet isn't available."
echo -e ""
echo -e "  ${YELLOW}flash${NC}     -- ${RED}(DFU mode)${NC} flash firmware to radios without GPS (MD-380)"
echo -e "  ${YELLOW}flashgps${NC}  -- ${RED}(DFU mode)${NC} flash firmware to radios having GPS (MD-390)"
echo -e "  ${YELLOW}flashdb${NC}   -- ${RED}(ON)${NC} flash the complete dmr-marc 'UsersCSV database'"
echo -e ""
echo -e "  ${YELLOW}~/lookup${NC} ${BLUE}yoursearchstring${NC}  -- query the user database for yoursearchstring"
echo -e ""
echo -e "\t\t\t${YELLOW}menu${NC}     -- display this screen again (or ${WHITE}Ctrl-D${NC})"
echo -e "\t\t\t${YELLOW}help${NC}     -- display typical command recipes"
echo -e ""
